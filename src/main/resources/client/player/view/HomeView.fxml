<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15.0" prefWidth="400.0" prefHeight="300.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.player.controller.HomeViewController"
      stylesheets="@HomeView.css"
      style="-fx-background-image: url('game.png'); -fx-background-size: cover;">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Text text="Welcome to What's The Word!" styleClass="title-text"/>
    <Button fx:id="startGameButton" text="Start Game" onAction="#handleStartGame" styleClass="menu-button"/>
    <Button fx:id="viewLeaderboardButton" text="View Leaderboard" onAction="#handleViewLeaderboard" styleClass="menu-button"/>
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="menu-button"/>
    <!--    <TextArea fx:id="outputArea" editable="false" prefHeight="120.0" wrapText="true" styleClass="output-area"/>-->
 </VBox>
